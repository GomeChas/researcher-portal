<!-- researchers.hbs -->
<div>
    <h2>Researchers:</h2>
</div>
{{!-- Create a table --}}
<table id="researchers-table">

    {{!-- Table header section --}}
    <thead>
        <tr>
            <th>Staff ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Active Credential</th>
            <th>Remove</th>
        </tr>
    </thead>

    {{!-- Table body section --}}
    <tbody>

        {{!-- For each row, print the ResearcherID, FirstName, LastName, and Credential, in order --}}
        {{#each data}}
        <tr data-value="{{this.ResearcherID}}">
            <td>{{this.ResearcherID}}</td>
            <td>{{this.FirstName}}</td>
            <td>{{this.LastName}}</td>
            <td>{{this.Credential}}</td>
            <td><button onclick='deleteResearcher({{this.ResearcherID}})'><i class='fa-solid fa-trash'></i></button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_researcher.js"></script>
<h3>Add New Researcher</h3>
<form id="add_new_researcher" method="POST" action="/add_new_researcher">
    <fieldset>
        <legend>Researcher Information</legend>
        <section>
            <label for="FirstName">First Name (required):</label>
            <input type="text" id="FirstName" name="FirstName" required
                minlength="2" maxlength="50" size="10">
        </section>
        <section>
            <label for="LastName">Last Name (required):</label>
            <input type="text" id="LastName" name="LastName" required
                minlength="2" maxlength="50" size="10">
        </section>
    </fieldset>
    <fieldset>
        <div>
            <label for="Credential">Active credential?</label>
            <select name="Credential" id="Credential">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
        </div>
    </fieldset>
    <div>  
        <input type="submit" value="Add Researcher">
    </div>
</form>

<h3>Update Researcher</h3>
<h4>Use the following fields to update an existing Researcher.</h4>
    <form id="update_researcher" method="POST" action="/update_researcher">
        <fieldset>
            <legend>Researcher</legend>
            <label for="input-researcherid">Select the Researcher to update by ID: </label>
            <select name="input-researcherid" id="selectResearcherUpdate" required>
                <option value="">--Please choose an option--</option>
                {{#each data}}
                    <option value="{{this.ResearcherID}}">{{this.ResearcherID}} - {{this.FirstName}} {{this.LastName}}</option>
                {{/each}}
            </select>
        </fieldset>
        <fieldset>
            <legend>Researcher Information</legend>
                <section>
                <label for="input-update-firstname">New First Name (required):</label>
                    <input type="text" id="input-update-firstname" name="input-update-firstname" required minlength="2" maxlength="50" size="10">
                    </section>
                <section>
                    <label for="input-update-lastname">New Last Name (required):</label>
                    <input type="text" id="input-update-firstname" name="input-update-lastname" required minlength="2" maxlength="50" size="10">
                </section>
            </div>
        </fieldset>
        <fieldset>
            <legend>Active Credentials</legend>
                <div>
                    <label for="Credential">Active credential? (required)</label>
                    <select name="Credential" id="updateCredential" required>
                        <option value="">--Please choose an option--</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
        </fieldset>
        <div>
            <input type="submit" value="Update Researcher">
        </div>
    </form>
