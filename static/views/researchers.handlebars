<!-- researchers.hbs -->
<div>
    <h2>MyT Codon Researchers:</h2>
</div>
{{!-- Create a table --}}
<table id="researchers-table">

    {{!-- Table header section --}}
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Active Credential</th>
            <th>Remove</th>
        </tr>
    </thead>

    {{!-- Table body section --}}
    <tbody>

        {{!-- For each row, print the ResearcherID, FirstName, LastName, and Credential, in order --}}
        {{#each data}}
        <tr data-value="{{this.ResearcherID}}">
            <td>{{this.FirstName}}</td>
            <td>{{this.LastName}}</td>
            <td>{{this.Credential}}</td>
            <td><button onclick="deleteResearcher({{this.ResearcherID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_researcher.js"></script>
<h3>Add New Researcher</h3>
<form id="add_new_researcher">
    <fieldset>
        <legend>Name</legend>
        <section>
            <label for="FirstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required
                minlength="2" maxlength="50" size="10">
        </section>
        <section>
            <label for="LastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required
                minlength="2" maxlength="50" size="10">
        </section>
    </fieldset>
    <fieldset>
        <legend>Active Credentials</legend>
            <div>
                <input type="radio" id="credentialTrue" name="Credential" value=TRUE checked>
                <label for="yes">Yes</label>
            </div>
            <div>
                <input type="radio" id="credentialFalse" name="Credential" value=FALSE>
                <label for="no">No</label>
            </div>
    </fieldset>
    <div>  
        <input type="submit" value="Add Researcher">
    </div>
</form>

<script src="./js/add_researcher.js"></script>

<h3>Update Credential</h3>
<form id="update_researcher_form">
    <fieldset>
        <legend>Name</legend>
        <label for="input-fullname">Full name: </label>
        <select name="input-fullname" id="selectResearcherUpdate">
            <option value="default">Select a Researcher</option>
            {{#each data}}
            <option value="{{this.ResearcherID}}">{{this.FirstName}} {{this.LastName}}</option>
            {{/each}}
        </select>
    </fieldset>
    <fieldset>
        <legend>Active Credentials</legend>
            <div>
                <input type="radio" id="updateCredentialTrue" name="UpdateCredential" value=TRUE checked>
                <label for="yes">Yes</label>
            </div>
            <div>
                <input type="radio" id="updateCredentialFalse" name="UpdateCredential" value=FALSE>
                <label for="no">No</label>
            </div>
    </fieldset>
    <div>
        <input type="submit" value="Update Researcher">
    </div>
</form>

<script src="./js/update_researcher.js"></script>