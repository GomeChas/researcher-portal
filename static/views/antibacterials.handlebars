<!-- antibacterials.hbs -->

<div>
    <h2>MyT Codon Antibacterial Selection:</h2>
</div>

<table id="antibacterial-table">

    {{!-- Table header section --}}
    <thead>
        <tr>
            <th>Antibacterial Name</th>
        </tr>
    </thead>

    {{!-- Table body section --}}
    <tbody>
        {{#each data}}
        <tr data-value="{{this.AntiBacterialID}}">
            <td>{{this.AntiBacterialName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h3>Add New Antibactrial Agent</h3>
<form id='add_new_antibacterial'>
    <section>
        <label for="AntiBacterialName">AntiBacterial:</label>
        <input type="text" id="AntiBacterialName" name="AntiBacterialName" required
            minlength="2" maxlength="50" size="10">
    </section>
    <div>
        <input type="submit" value="Add AntiBacterial">
    </div>
</form>

<script src="./js/add_antibacterial.js"></script>